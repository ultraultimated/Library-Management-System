<%= form_with(model: @login, local: true) do |f| %>

<h1>Login To Library System</h1>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>
  <br>

  <div class="actions">
    <%= f.submit 'Sign In' %>
  </div>
  <br>

  <div class="actions">
    <h3><%= link_to 'SIGN-UP',controller: 'sign_up',action: "index" %></h3>
     </div>
<%end %>
